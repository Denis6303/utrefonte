    </div>

    <div class="FrmAbonne champsGrp">
    {{ form_errors(form.telUtilisateur) }}
	 {{ form_errors(form.celUtilisateur) }}
    {{ form_label(form.telUtilisateur, 'abonnes.form.tel'|trans({}, 'abonnes'))}}
