<script>
    $("#utb_clientbundle_modifFicheUtilisateurtype_profil").change(function(){
        var valeur = $(document.getElementById('utb_clientbundle_modifFicheUtilisateurtype_profil')).val();
        //alert(valeur);
        if(valeur == 2){
           $("#fonds_container").show();
        }
        else{
            $("#fonds_container").hide();
        }
    })
</script>
                                    