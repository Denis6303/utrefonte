                                        if (etat == 4){
                                              $('#process_tpl').html($('#impossiblepub').html());
                                              window.location.reload();
                                        }
                                        if (etat == 5){
                                              $('#process_tpl').html($('#impossibledepub').html());
                                              window.location.reload();
                                        }  
                                         
                               
                                    }
                                    else{
                                                                                
                                        if (etat == 2) {   
                                              $('#process_tpl').html($('#reussitesub').html());
                                              window.location.reload();
