{# src/utb/ParamsCompteBundle/Resources/views/show.html.twig #}
{% extends "utbClientBundle::layoutClient.html.twig" %}
{% block title %}
    {{ parent() }} - Détail du compte
{% endblock %}

{% block client_centre_body %}
    <ul class="filariane bleuLink">
        <li><a href="{{ path("utb_client_accueil",{'locale':locale,'typePre':1}) }}"><img src="{{asset('img/client-img/pointer.png')}}" alt="" />{{'client.tb.titre'|trans({},'messages') }}</a></li>
        <li><img src="{{asset('img/client-img/icon-rightdirect.png')}}" alt="" /></li>
        <li><a href="{{ path("efacture_export_compte",{'locale':locale,'typePre':1}) }}">{{ 'paramCompte.libelle'|trans({},'op') }}</a></li>
        <li><img src="{{asset('img/client-img/icon-rightdirect.png')}}" alt="" /></li>
        <li>Détail du compte</li>
    </ul>
    <h2 class="miniTitle title2 title-WithTopBar hover-title-WithTopBar">Détail du compte</h2>
    <div id="afficheAjax">
        <table class="infoCompte">
            <tbody>
                <tr>
                    <td>Compte</td>
                    <td>{{ entity.compte }}</td>
                </tr>
                <tr>
                    <td>Auteur</td>
                    <td>{{ entity.lib }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="rightPosition">
        <a href="{{ path('efacture_export_compte_edit', { 'id': entity.id }) }}" class="boutonLink">Modifier</a>
        <a href="{{ path('efacture_export_compte_delete', { 'id': entity.id }) }}" ><input type="button" class="annulerBut " value="Supprimer" > </a>
        <div class="clr"></div>
    </div>

{% endblock %}
