											{{ form_widget(form.profil) }}
											<div class="clr"></div>
											</div>
                                                                                    
											<div class="FrmAjoutArt">
											{{ form_errors(form.photo) }}
											{{ form_label(form.photo, 'users.form.photo'|trans({}, 'users')) }}
