{% extends "utbAdminBundle::layoutAdmin.html.twig" %}
{% block title %}
  {{ parent() }} - {{ 'users.ajout.grandtitrepg'|trans({}, 'users') }}
{% endblock %}

  {% block administration_body %}
  
            <!-- FIN MENU PRINCIPAL BAR HORIZONTALE NOIRE -->

            <!-- FIN MENU RAPIDE BAR HORIZONTALE GRISE -->

            <div class="span-25 colorBleu" id="filAriane">	<!-- Fil d'ariane conducteur Tableau de bord > Gestion article > Modifier -->
                <a href="{{path('utb_admin_accueil',{ 'locale': locale })}}"> {{ 'admin.accueil'|trans}}</a> > <a href=" {{path('utb_admin_userProfilListe', {'locale': locale})}} ">{{ 'admin.layout.menu.users'|trans }}</a> > 
                <a href="{{path('liste_utilisateur')}}">{{ 'users.ajout.users'|trans({}, 'users') }}</a> > {{ 'users.ajout.grandtitrepg'|trans({}, 'users') }}
            </div>
            
            {% for contenu in app.session.flashbag.get('notice') %}            
                {% if contenu == "emailerror" %}
                    <div class="span-25">
                        <div class="error errorMsg">                        
                                {{ 'users.emailerror'|trans({}, 'users') }}
                        </div>    
                    </div> 
                {% endif %}

                {% if contenu == "loginerror" %}
                    <div class="span-25">
                        <div class="error errorMsg">                        
                                {{ 'users.loginerror'|trans({}, 'users') }}
                        </div>    
                    </div> 
                {% endif %}
                {% if contenu == "emailformaterror" %}
                    <div class="span-25">
                        <div class="error errorMsg">                        
                                {{ 'users.emailformaterror'|trans({}, 'users') }}
                        </div>    
                    </div> 
                {% endif %}
                {% if contenu == "passworderror" %}
                   <div class="span-25">
                       <div class="error errorMsg">                        
                               {{ 'users.passworderror'|trans({}, 'users') }}
                       </div>    
                   </div> 
                {% endif %}
                {% if contenu == "smallpassworderror" %}
                   <div class="span-25">
                       <div class="error errorMsg">                        
                               {{ 'users.smallpassworderror'|trans({}, 'users') }}
                       </div>    
                   </div> 
                {% endif %}
            
               {% if contenu == "errorsmalllogin" %}
                   <div class="span-25">
                       <div class="error errorMsg">                        
                               {{ 'users.errorsmalllogin'|trans({}, 'users') }}
                       </div>    
                   </div> 
                {% endif %}           
            
            
            {% endfor %}
  
                          
