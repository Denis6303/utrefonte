<nav class="main-menu">
    <ul>
        {% for menu in menus %}
            <li>
                <a href="{{ menu.url }}">{{ menu.libelle }}</a>
                {% if menu.children is defined and menu.children|length > 0 %}
                    <ul class="submenu">
                        {% for child in menu.children %}
                            <li>
                                <a href="{{ child.url }}">{{ child.libelle }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav> 