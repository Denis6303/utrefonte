{% extends "utbClientBundle::layoutClient.html.twig" %}

{% block title %}
  {{ parent() }} - Accueil
{% endblock %}	
			
{% block client_centre_body %}  
		<ul class="filariane bleuLink">
			<li><a href="{{ path("utb_client_accueil",{'locale':locale,'typePre':1}) }}"><img src="{{ asset('img/client-img/pointer.png')}}" alt="" />{{'client.tb.titre'|trans({},'messages') }}</a></li>
			<li><img src="{{ asset('img/client-img/icon-rightdirect.png')}}" alt="" /></li>
			<li><a href="">{{'controleur.ajout'|trans({},'autres')}}</a></li>
        </ul>

		<!--DÃ©but du box compte-->
		
		<h2 class="miniTitle title2 title-WithTopBar hover-title-WithTopBar">{{'controleur.ajout'|trans({},'autres')}}</h2>
		
                <form action=" {{ path("utb_client_ajoutcontroleur",{'locale':locale}) }} " method="post" {{ form_enctype(form) }} id="ajoutControleur">
                    <div class="FrmAbonne">
						{{ form_errors(form.nomControleur) }}
						<span class="labelLong"><label>{{ 'controleurs.form.nom'|trans({}, 'controleurs') }}</label></span>
						{{ form_widget(form.nomControleur) }}
						<div class="clr"></div>
					</div>
					<div class="FrmAbonne">
						{{ form_errors(form.description) }}
						<span class="labelNoFloat labelLong"><label>{{ 'controleurs.form.desc'|trans({}, 'controleurs') }}</label></span>
						{{ form_widget(form.description) }}
						<div class="clr"></div>
					</div> 
					<div>	
						<input type="submit" value="{{'client.ajouter'|trans({},'messages') }}" name="op" id="j_bouton" class="boutonSubmit">
                                                <a  href="{{ path('utb_client_listecontroleur',{'locale':locale}) }}"><input type="button" class="annulerBut back" value="{{'client.annuler'|trans({},'messages') }}" name="" id="" ></a>

                                                <div class="clr"></div>
                                        </div>
               </form>                                              
                            
		
		<!--Fin du box compte-->

                
{% endblock %}
		