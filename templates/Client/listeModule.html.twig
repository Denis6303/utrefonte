{# src/utb/ClientBundle/Resources/views/layoutSite.html.twig #}
{% extends "utbClientBundle::layoutClient.html.twig" %}

{% block title %}
  {{ parent() }} - Accueil
{% endblock %}	
			
{% block client_centre_body %}  
		<ul class="filariane bleuLink">
                        <li><a href="{{ path("utb_client_accueil",{'locale':locale,'typePre':1}) }}"><img src="{{ asset('img/client-img/pointer.png')}}" alt="" />{{'client.tb.titre'|trans({},'messages') }}</a></li>
                        <li><img src="{{ asset('img/client-img/icon-rightdirect.png')}}" alt="" /></li>
                        <li>{{'module.liste'|trans({},'autres')}}</li>
                </ul>

		<!--DÃ©but du box compte-->
		
		<h2 class="miniTitle title2 title-WithTopBar hover-title-WithTopBar">		
                    {{'module.liste'|trans({},'autres')}}
                </h2>
                <div class="toolBoutons marginBottom20p">
                    <div>    
                        <a href="{{ path('utb_client_ajoutmodule',{'locale':locale})}}">
                                                <img src="{{ asset('img/client-img/icon-25-add.png')}}"  alt="Ajouter" title="{{ 'client.ajouter'|trans}}" />
                                                <span>{{'client.ajouter'|trans({},'messages') }}</span>
                        </a>
                    </div>
                    <div class="clr"></div>
               </div>
				
		<table class="infoCompte noLeftBorder noGras">
                    <tr>
                        <th style="padding-left: 10px;"><input type="checkbox" /></th>
                        <th>{{'module.nom'|trans({},'autres')}}</th>
                        <th colspan="2">{{'action.titre'|trans({},'autres')}}</th>
                        
                    </tr>
                                                      {% for module in listemodule %}
                    <tr>
                        <td class="w30"><input type="checkbox" /></td>
                        <td>              
                             {{module.libModule }}
                        </td>     

                        <td class="w30">              
                            <a href="{{ path('utb_client_modifmodule', {'id': module.id,'locale':locale}) }}"><img src="{{ asset('img/client-img/icon-16-pen.png')}}"  alt="Modifier" title="{{ 'client.modifier'|trans}}" />{#{ 'client.modifier'|trans}#}</a> 
                        </td>            

                        <td class="w30">              
                            <a href="{{ path('utb_client_supprmodule', {'id': module.id,'locale':locale}) }}" onclick="return confirm('{{'abonnes.confirmation.confirmesuppression1'|trans({},'abonnes')}}');"><img src="{{ asset('img/client-img/icon-16-bin.png')}}"  alt="Supprimer" title="{{ 'client.supprimer'|trans}}" />{#{ 'client.supprimer'|trans}#}</a> 
                        </td>                                            

                    </tr>
{% else %}
                    <tr>
                        <td colspan="4">{{ 'modules.none'|trans({}, 'modules') }}</td>       
                    </tr>       
{% endfor %}
                    </table>
                    
             {{ information.decochetoutbox() }}                             
{% endblock %}
		