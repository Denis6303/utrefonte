         <script type="text/javascript">
                    function date_heure(id)
                    {
                    date = new Date;
                    annee = date.getFullYear();
                    moi = date.getMonth();
                    mois = new Array("{{'date.mois.janvier'|trans({},'dates') }}", "{{'date.mois.fevrier'|trans({},'dates') }}", "{{'date.mois.mars'|trans({},'dates') }}", "{{'date.mois.avril'|trans({},'dates') }}", "{{'date.mois.mai'|trans({},'dates') }}", "{{'date.mois.juin'|trans({},'dates') }}", "{{'date.mois.juillet'|trans({},'dates') }}", "{{'date.mois.aout'|trans({},'dates') }}", "{{'date.mois.septembre'|trans({},'dates') }}", "{{'date.mois.octobre'|trans({},'dates') }}", "{{'date.mois.novembre'|trans({},'dates') }}", "{{'date.mois.decembre'|trans({},'dates') }}");
                    j = date.getDate();
                    jour = date.getDay();
                    jours = new Array("{{'date.jour.dimanche'|trans({},'dates') }}", "{{'date.jour.lundi'|trans({},'dates') }}", "{{'date.jour.mardi'|trans({},'dates') }}", "{{'date.jour.mercredi'|trans({},'dates') }}", "{{'date.jour.jeudi'|trans({},'dates') }}", "{{'date.jour.vendredi'|trans({},'dates') }}", "{{'date.jour.samedi'|trans({},'dates') }}");
                    h = date.getHours();
                    if(h<10)
                    {
                    h = "0"+h;
                    }
                    m = date.getMinutes();
                    if(m<10)
                    {
                    m = "0"+m;
                    }
                    s = date.getSeconds();
                    if(s<10)
                    {
                    s = "0"+s;
                    }
                    {% set currentPath = app.request.attributes.get('_route') %}
							   {% if locale=="fr" %}       
                    resultat = ''+jours[jour]+' '+j+' '+mois[moi]+' '+annee+' - '+h+':'+m+':'+s;
                    {% else %}
                        if(j===1||j===21||j===31){
                            resultat = ''+jours[jour]+' '+j+'st'+' '+mois[moi]+' '+annee+' - '+h+':'+m+':'+s;
    }
                        else if(j===2||j===22){
                            resultat = ''+jours[jour]+' '+j+'nd'+' '+mois[moi]+' '+annee+' - '+h+':'+m+':'+s;
                        }
                        
                        else if(j==3||j===23){
                            resultat = ''+jours[jour]+' '+j+'rd'+' '+mois[moi]+' '+annee+' - '+h+':'+m+':'+s;
                        }
                        
                        else{resultat = ''+jours[jour]+' '+j+'th'+' '+mois[moi]+' '+annee+' - '+h+':'+m+':'+s;}
                       
                     {% endif  %}
                    document.getElementById(id).innerHTML = resultat;
                    setTimeout('date_heure("'+id+'");','1000');
                    return true;
                    }
            </script>
